<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:ece="http://schemas.android.com/apk/res/com.stcarlso.goece"
				android:layout_width="match_parent" android:layout_height="match_parent"
				android:orientation="vertical">
	<view class="com.stcarlso.goece.ui.ValueEntryBox" android:id="@+id/guiOhmsCurrent"
		  android:layout_width="wrap_content" android:layout_height="wrap_content" ece:units="A"
		  ece:value="1.0" ece:description="@string/current" android:layout_alignParentTop="true"
		  android:tag="ohmsCur" ece:affects="power" android:layout_centerHorizontal="true"
		  ece:group="vir"/>
	<ImageView android:layout_width="105dp" android:layout_height="120dp"
			   android:contentDescription="@string/cirohms" android:id="@+id/guiOhmsCircuit"
			   android:src="@drawable/ohmslaw" android:layout_centerHorizontal="true"
			   android:layout_below="@id/guiOhmsCurrent" android:layout_margin="5dp"/>
	<view class="com.stcarlso.goece.ui.ValueEntryBox" android:id="@+id/guiOhmsVoltage"
		  android:layout_width="wrap_content" android:layout_height="wrap_content" ece:units="V"
		  ece:value="1.0" ece:description="@string/voltage" ece:group="vir"
		  android:tag="ohmsVolt" ece:affects="power" android:layout_below="@id/guiOhmsCurrent"
		  android:layout_toLeftOf="@id/guiOhmsCircuit"/>
	<view class="com.stcarlso.goece.ui.ValueEntryBox" android:id="@+id/guiOhmsResistance"
		  android:layout_width="wrap_content" android:layout_height="wrap_content" ece:units="Î©"
		  ece:value="1.0" ece:description="@string/resist" ece:group="vir"
		  android:tag="ohmsRes" ece:affects="power" android:layout_below="@id/guiOhmsCurrent"
		  android:layout_toRightOf="@id/guiOhmsCircuit"/>
	<view class="com.stcarlso.goece.ui.ValueEntryBox" android:id="@+id/guiOhmsPower"
		  android:layout_width="wrap_content" android:layout_height="wrap_content" ece:units="W"
		  ece:value="1.0" ece:description="@string/power" ece:group="power"
		  android:tag="ohmsPower" ece:affects="vir" android:layout_centerHorizontal="true"
		  android:layout_marginTop="30dp" android:layout_below="@id/guiOhmsCircuit"/>
</RelativeLayout>