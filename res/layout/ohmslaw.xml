<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
			  xmlns:ece="http://schemas.android.com/apk/res/com.stcarlso.goece"
			  android:layout_width="match_parent" android:layout_height="match_parent"
			  tools:context=".OhmsLawActivity">

	<com.stcarlso.goece.ValueEntryBox android:layout_width="wrap_content"
									  android:layout_height="wrap_content" ece:units="V"
									  android:layout_gravity="center_horizontal"
									  android:id="@+id/guiOhmsVoltage" ece:description="Voltage"/>
	<com.stcarlso.goece.ValueEntryBox android:layout_width="wrap_content"
									  android:layout_height="wrap_content" ece:units="A"
									  android:layout_gravity="center_horizontal"
									  android:id="@+id/guiOhmsCurrent" ece:description="Current"/>
	<com.stcarlso.goece.ValueEntryBox android:layout_width="wrap_content"
									  android:layout_height="wrap_content" ece:units="Î©"
									  android:layout_gravity="center_horizontal"
									  android:id="@+id/guiOhmsResistance" ece:description="Resistance"/>
</LinearLayout>