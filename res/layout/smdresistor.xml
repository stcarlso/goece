<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
				android:layout_width="match_parent" android:layout_height="match_parent"
				tools:context=".SMDResistorActivity">
	<TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="40sp"
			  android:text="" android:id="@+id/guiResValue" android:layout_height="wrap_content"
			  android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
			  android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:textAppearance="?android:attr/textAppearanceMedium" android:text=""
			  android:layout_gravity="center_horizontal" android:id="@+id/guiResIsStandard"
			  android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
	<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:id="@+id/guiResLine" android:text="@string/guiResLine"
			  android:layout_below="@id/guiResValue" android:layout_centerHorizontal="true"/>
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
				  android:layout_centerHorizontal="true" android:layout_below="@id/guiResLine"
				  android:layout_above="@id/guiResIsStandard">
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
				  android:inputType="textNoSuggestions|textCapCharacters|textVisiblePassword"
				  android:ems="10" android:maxLength="4" android:imeOptions="actionDone"
				  android:id="@+id/guiResSMDCode" android:layout_marginRight="20dp"
				  android:text="@string/guiResInitialValue" android:selectAllOnFocus="true"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/guiCalculate" android:onClick="onClick"/>
	</LinearLayout>
</RelativeLayout>