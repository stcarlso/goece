<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
				xmlns:ece="http://schemas.android.com/apk/res/com.stcarlso.goece"
				android:layout_width="match_parent" android:layout_height="match_parent"
				tools:context=".ResColorCodeActivity">
	<TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="40sp"
			  android:text="" android:id="@+id/guiResValue" android:layout_height="wrap_content"
			  android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
			  android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:textAppearance="?android:attr/textAppearanceMedium" android:text=""
			  android:layout_gravity="center_horizontal" android:id="@+id/guiResIsStandard"
			  android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
	<LinearLayout android:layout_width="wrap_content" android:orientation="horizontal"
				  android:layout_centerHorizontal="true" android:layout_height="fill_parent"
				  android:layout_above="@id/guiResIsStandard" android:layout_below="@id/guiResValue">
		<ScrollView android:layout_width="wrap_content" android:layout_height="match_parent"
					android:layout_gravity="center_horizontal">
			<com.stcarlso.goece.ColorBand android:layout_width="wrap_content" android:layout_height="wrap_content"
											 android:orientation="vertical" ece:pos="0" android:id="@+id/guiResBand1"/>
		</ScrollView>
		<ScrollView android:layout_width="wrap_content" android:layout_height="match_parent"
					android:layout_gravity="center_horizontal">
			<com.stcarlso.goece.ColorBand android:layout_width="wrap_content" android:layout_height="wrap_content"
											 android:orientation="vertical" ece:pos="1" android:id="@+id/guiResBand2"/>
		</ScrollView>
		<ScrollView android:layout_width="wrap_content" android:layout_height="match_parent"
					android:layout_gravity="center_horizontal">
			<com.stcarlso.goece.ColorBand android:layout_width="wrap_content" android:layout_height="wrap_content"
											 android:orientation="vertical" ece:pos="2" android:id="@+id/guiResBand3"/>
		</ScrollView>
		<ScrollView android:layout_width="wrap_content" android:layout_height="match_parent"
					android:layout_gravity="center_horizontal" android:layout_marginRight="20dp">
			<com.stcarlso.goece.ColorBand android:layout_width="wrap_content" android:layout_height="wrap_content"
											 android:orientation="vertical" ece:pos="3" android:id="@+id/guiResBand4"/>
		</ScrollView>
		<ScrollView android:layout_width="wrap_content" android:layout_height="match_parent"
					android:layout_gravity="center_horizontal">
			<com.stcarlso.goece.ColorBand android:layout_width="wrap_content" android:layout_height="wrap_content"
											 android:orientation="vertical" ece:pos="4" android:id="@+id/guiResBand5"/>
		</ScrollView>
	</LinearLayout>
</RelativeLayout>