<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:ece="http://schemas.android.com/apk/res/com.stcarlso.goece"
				android:orientation="vertical" android:layout_width="match_parent"
				android:layout_height="match_parent">
	<Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
			 android:entries="@array/guiCurOptions" android:spinnerMode="dropdown"
			 android:tag="guiCurWhat" android:id="@+id/guiCurWhat"
			 android:layout_centerHorizontal="true"/>
	<RelativeLayout android:layout_width="wrap_content" android:layout_below="@id/guiCurWhat"
					android:layout_height="wrap_content" android:id="@+id/guiCurWire"
					android:orientation="vertical" android:visibility="visible"
					android:rowCount="5" android:columnCount="2">
		<Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
				 android:entries="@array/guiCurMaterials" android:spinnerMode="dropdown"
				 android:tag="guiCurMaterials" android:id="@+id/guiCurMaterials"/>
		<com.stcarlso.goece.ui.ValueEntryBox android:layout_width="wrap_content"
											 android:layout_height="wrap_content"
											 android:tag="guiCurGauge" ece:group="inputs"
											 ece:affects="outputs" ece:units=""
											 android:layout_below="@id/guiCurMaterials"
											 android:id="@+id/guiCurGauge" ece:value="18"
											 ece:description="@string/guiCurGauge"/>
		<com.stcarlso.goece.ui.ValueEntryBox android:layout_width="wrap_content"
											 android:layout_height="wrap_content"
											 android:tag="guiCurWireCur" ece:group="inputs"
											 ece:affects="outputs" ece:units="A"
											 android:layout_below="@id/guiCurGauge"
											 android:id="@+id/guiCurWireCur" ece:value="1"
											 ece:description="@string/current"/>
	</RelativeLayout>
	<GridLayout android:layout_width="wrap_content" android:layout_below="@id/guiCurWhat"
				android:layout_height="wrap_content" android:id="@+id/guiCurTrace"
				android:orientation="vertical" android:visibility="invisible"
				android:rowCount="5" android:columnCount="2">

	</GridLayout>
</RelativeLayout>